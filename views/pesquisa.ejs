        <script>
            function myMap() {
                var mapProp= {
                    center:new google.maps.LatLng(-23.4620547,-46.6748656),
                    marker1: new google.maps.LatLng(-23.4620547,-46.6748656),
                    marker2: new google.maps.LatLng(-23.461503536126095, -46.67096032429209), 
                    zoom:16,
                };
                var map = new google.maps.Map(document.getElementById("googleMap"),mapProp);
                var marker = new google.maps.Marker({position: mapProp.marker1});
                var marker2 = new google.maps.Marker({position: mapProp.marker2});
                marker.setMap(map);
                marker2.setMap(map);

                const flightPlanCoordinates = [
                    { lat: -23.4620547, lng: -46.6748656 },
                    { lat: -23.461503536126095, lng: -46.67096032429209 },
                ];
                const flightPath = new google.maps.Polyline({
                    path: flightPlanCoordinates,
                    geodesic: false,
                    strokeColor: "#FF0000",
                    strokeOpacity: 1.0,
                    strokeWeight: 2,
                });

                flightPath.setMap(map);
            }
            
        </script>
            
